#!/usr/bin/env bash
set -Eeu -o pipefail

# Run dockerized R package checks.
# Updated 2019-07-31.

source_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"

if [[ -z "${image:-}" ]]
then
    image="basejump"
fi

if [[ -z "${tag:-}" ]]
then
    tag="latest"
fi

image="acidgenomics/${image}:${tag}"
docker pull "$image"
docker run -ti \
    --volume="${PWD}:/work" \
    --workdir="/work" \
    "$image" \
    "${source_dir}/check"
